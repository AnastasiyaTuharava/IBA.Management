<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TitledPane fx:id="fxProjectsList" animated="false" text="Projects List" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="by.iba.management.view.fxml.ProjectsListController">
   <content>
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <TableView fx:id="fxProjectsListTable" layoutY="127.0" onMouseClicked="#openProjectProfile" prefHeight="207.0" prefWidth="1200.0">
               <columns>
                  <TableColumn fx:id="projectId" editable="false" prefWidth="76.0" text="ID" />
                  <TableColumn fx:id="projectName" prefWidth="248.0" text="Project Name" />
                  <TableColumn fx:id="projectDescription" prefWidth="792.0" text="Project Description" />
               </columns>
            </TableView>
            <Group layoutX="28.0" layoutY="54.0">
               <children>
                  <Label layoutX="59.0" layoutY="23.0" text="Search:" />
                  <TextField fx:id="fxFindProjectTextField" layoutX="162.0" layoutY="19.0" />
                  <RadioButton fx:id="fxSearchByProjectName" layoutX="580.0" layoutY="26.0" mnemonicParsing="false" text="search by Name" />
                  <Button fx:id="fxFindProjectButton" layoutX="790.0" layoutY="20.0" mnemonicParsing="false" onAction="#findProject" text="Find Project" />
                  <RadioButton fx:id="fxSearchByProjectId" layoutX="428.0" layoutY="26.0" mnemonicParsing="false" text="search by ID" />
                  <Button fx:id="fxClearlProjectSearchButton" layoutX="936.0" layoutY="20.0" mnemonicParsing="false" text="Clear" />
               </children>
            </Group>
            <Button fx:id="addNewProjectButton" layoutX="731.0" layoutY="646.0" mnemonicParsing="false" onAction="#openProjectProfile" text="Add New Project" />
            <Button fx:id="fxGoHomeButton" layoutX="77.0" layoutY="646.0" mnemonicParsing="false" onAction="#backToMain" text="&lt;&lt; Back" />
            <Button fx:id="fxExportProjectsToExcelButton" layoutX="1080.0" layoutY="646.0" mnemonicParsing="false" text="Save to Excel" />
            <Label fx:id="projectIdLabel" layoutX="273.0" layoutY="435.0" text="N/A" />
            <Label fx:id="projectNameLabel" layoutX="273.0" layoutY="463.0" text="N/A" />
            <Label fx:id="projectDescriptionLabel" layoutX="273.0" layoutY="489.0" text="N/A" />
            <Label layoutX="66.0" layoutY="489.0" text="Project Description:" />
            <Label layoutX="66.0" layoutY="463.0" text="Project Name:" />
            <Label layoutX="66.0" layoutY="435.0" text="Project ID:" />
            <Label layoutX="66.0" layoutY="388.0" text="PROJECT INFO:" />
            <Button fx:id="fxDeleteProjectButton" layoutX="532.0" layoutY="646.0" mnemonicParsing="false" onAction="#handleDeleteProject" text="Delete Project" />
         </children>
      </AnchorPane>
   </content>
</TitledPane>
